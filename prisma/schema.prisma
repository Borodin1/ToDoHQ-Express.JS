datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}




model User {
  id Int @id @default(autoincrement())
  username String @unique
  firstName String
  lastName String
  email String @unique
  password String
  refreshToken String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  todos Todo[]
}

model Todo{
  id Int @id @default(autoincrement())
  title String
  description String?
  completed Boolean @default(false)
  priority  Priority 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
user      User  @relation(fields: [userId], references: [id])
userId    Int
}


enum Priority {
   extreme  
   moderate
   low
}
